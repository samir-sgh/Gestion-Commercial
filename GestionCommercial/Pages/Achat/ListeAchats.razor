@page "/achats"
@using GestionCommercial.Models
@inject GestionCommercial.Services.AchatService AchatService
@inject NavigationManager Nav

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">

    <!-- ⭐ HEADER -->
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center" Class="mb-4">
        <MudStack Spacing="1">
            <MudText Typo="Typo.h4">Achats</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Suivi des achats fournisseurs et des documents (Facture / BL / Commande)
            </MudText>
        </MudStack>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   Size="Size.Large"
                   Href="/achats/nouveau">
            Nouvel achat
        </MudButton>
    </MudStack>

    @if (achats == null)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mt-2">
            Chargement des achats...
        </MudText>
    }
    else
    {
        var liste = filteredAchats.ToList();

        <!-- ⭐ FILTERS CARD -->
        <MudCard Elevation="2" Class="mb-4">
            <MudCardContent>
                <MudGrid Spacing="3">
                    <MudItem xs="12" sm="6" md="3">
                        <MudDatePicker Label="Du"
                                       @bind-Date="dateFrom"
                                       Editable="true"
                                       DateFormat="dd/MM/yyyy"
                                       Clearable="true" />
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudDatePicker Label="Au"
                                       @bind-Date="dateTo"
                                       Editable="true"
                                       DateFormat="dd/MM/yyyy"
                                       Clearable="true" />
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudSelect T="int"
                                   Label="Fournisseur"
                                   @bind-Value="selectedFournisseurId"
                                   AnchorOrigin="Origin.BottomCenter">
                            <MudSelectItem T="int" Value="0">Tous les fournisseurs</MudSelectItem>
                            @foreach (var f in fournisseurOptions)
                            {
                                <MudSelectItem T="int" Value="f.IdTiers">@f.FournisseurNom</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudTextField T="string"
                                      Label="Recherche"
                                      @bind-Value="searchText"
                                      Placeholder="Nom fournisseur, remarque..."
                                      Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Clearable="true" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>

        @if (!liste.Any())
        {
            <MudAlert Severity="Severity.Info">
                Aucun achat trouvé avec les filtres actuels.
            </MudAlert>
        }
        else
        {
            <!-- ⭐ STATS -->
            <MudStack Row="true" Justify="Justify.SpaceBetween" Class="mb-3">
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Nombre d'achats : <strong>@liste.Count</strong>
                </MudText>
                <MudText Typo="Typo.body2" Color="Color.Primary">
                    Total TTC : <strong>@liste.Sum(a => a.MontantTotal).ToString("N2") DH</strong>
                </MudText>
            </MudStack>

            <!-- ⭐ TABLE -->
            <MudTable Items="@liste"
                      Hover="true"
                      Striped="true"
                      Dense="true"
                      Elevation="2">
                <HeaderContent>
                    <MudTh>N°</MudTh>
                    <MudTh>Date</MudTh>
                    <MudTh>Fournisseur</MudTh>
                    <MudTh>Dépôt</MudTh>
                    <MudTh>Type</MudTh>
                    <MudTh Style="text-align: right;">Montant TTC</MudTh>
                    <MudTh>Statut</MudTh>
                    <MudTh>Remarque</MudTh>
                    <MudTh Style="text-align: right;"></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="N°">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">#@context.AchatId</MudText>
                    </MudTd>
                    <MudTd DataLabel="Date">@context.DateAchat.ToShortDateString()</MudTd>
                    <MudTd DataLabel="Fournisseur">@context.FournisseurNom</MudTd>
                    <MudTd DataLabel="Dépôt">@context.DepotNom</MudTd>
                    <MudTd DataLabel="Type">
                        <MudChip T="String" Size="Size.Small" Color="Color.Default">@context.TypeDocument</MudChip>
                    </MudTd>
                    <MudTd DataLabel="Montant" Style="text-align: right;">
                        <MudText Typo="Typo.body2"><strong>@context.MontantTotal.ToString("N2") DH</strong></MudText>
                    </MudTd>
                    <MudTd DataLabel="Statut">
                        <MudChip T="String" Size="Size.Small" Color="@GetStatutColor(context.Statut)">
                            @context.Statut
                        </MudChip>
                    </MudTd>
                    <MudTd DataLabel="Remarque">
                        <MudText Typo="Typo.body2" Color="Color.Secondary" Style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                            @context.Remarque
                        </MudText>
                    </MudTd>
                    <MudTd DataLabel="" Style="text-align: right;">
                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Primary"
                                   Size="Size.Small"
                                   Href="@($"/achats/{context.AchatId}")">
                            Détails
                        </MudButton>
                    </MudTd>
                </RowTemplate>
            </MudTable>
        }
    }
</MudContainer>

@code {
    List<Achat>? achats;

    // Filters
    DateTime? dateFrom;
    DateTime? dateTo;
    int selectedFournisseurId = 0;
    string? searchText;

    List<Achat> fournisseurOptions => achats?
        .GroupBy(a => new { a.IdTiers, a.FournisseurNom })
        .Select(g => g.First())
        .OrderBy(a => a.FournisseurNom)
        .ToList()
        ?? new List<Achat>();

    IEnumerable<Achat> filteredAchats
    {
        get
        {
            if (achats == null)
                return Enumerable.Empty<Achat>();

            var query = achats.AsEnumerable();

            if (dateFrom.HasValue)
            {
                var d1 = dateFrom.Value.Date;
                query = query.Where(a => a.DateAchat.Date >= d1);
            }

            if (dateTo.HasValue)
            {
                var d2 = dateTo.Value.Date;
                query = query.Where(a => a.DateAchat.Date <= d2);
            }

            if (selectedFournisseurId > 0)
            {
                query = query.Where(a => a.IdTiers == selectedFournisseurId);
            }

            if (!string.IsNullOrWhiteSpace(searchText))
            {
                var s = searchText.Trim().ToLower();
                query = query.Where(a =>
                    (!string.IsNullOrEmpty(a.FournisseurNom) &&
                     a.FournisseurNom.ToLower().Contains(s))
                    || (!string.IsNullOrEmpty(a.Remarque) &&
                        a.Remarque.ToLower().Contains(s)));
            }

            return query;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        achats = await AchatService.GetListeAchats();
    }

    Color GetStatutColor(string? statut)
    {
        return statut?.ToLower() switch
        {
            "validé" or "valide" => Color.Success,
            "en cours" => Color.Info,
            "annulé" or "annule" => Color.Error,
            "brouillon" => Color.Warning,
            _ => Color.Default
        };
    }
}