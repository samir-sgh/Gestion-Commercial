@page "/users"
@using GestionCommercial.Models
@using Microsoft.AspNetCore.Authorization
@* @attribute [Authorize(Roles = "Admin")] *@

@inject GestionCommercial.Services.UtilisateurService UtilisateurService
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3>Utilisateurs</h3>

<button class="btn btn-primary mb-3" @onclick="Nouveau">
    Nouvel utilisateur
</button>

@if (isLoading)
{
    <p>Chargement...</p>
}
else if (!string.IsNullOrEmpty(erreur))
{
    <div class="alert alert-danger">@erreur</div>
}
else if (utilisateurs.Count == 0)
{
    <p>Aucun utilisateur.</p>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Rôle</th>
                <th>Actif</th>
                <th>Date création</th>
                <th style="width:180px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in utilisateurs)
            {
                <tr>
                    <td>@u.NomUtilisateur</td>
                    <td>@u.Role</td>
                    <td>@(u.Actif ? "Oui" : "Non")</td>
                    <td>@u.DateCreation.ToString("dd/MM/yyyy")</td>
                    <td>
                        <button class="btn btn-sm btn-secondary me-1"
                                @onclick="@(() => Editer(u.IdUtilisateur))">
                            Modifier
                        </button>
                        <button class="btn btn-sm btn-danger"
                                @onclick="@(() => Supprimer(u.IdUtilisateur, u.NomUtilisateur))">
                            Supprimer
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Utilisateur> utilisateurs = new();
    bool isLoading = true;
    string? erreur;

    protected override async Task OnInitializedAsync()
    {
        await Charger();
    }

    private async Task Charger()
    {
        try
        {
            isLoading = true;
            erreur = null;
            utilisateurs = await UtilisateurService.GetUtilisateursAsync(includeInactive: true);
        }
        catch (Exception ex)
        {
            erreur = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    void Nouveau()
    {
        Nav.NavigateTo("/users/edit/0");   // 0 = nouveau user
    }

    void Editer(int id)
    {
        Nav.NavigateTo($"/users/edit/{id}");
    }

    async Task Supprimer(int id, string nom)
    {
        bool ok = await JS.InvokeAsync<bool>(
            "confirm", $"Supprimer l'utilisateur '{nom}' ?");
        if (!ok) return;

        await UtilisateurService.SupprimerAsync(id);
        await Charger();
    }
}
